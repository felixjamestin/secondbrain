{
  "extends": ["airbnb", "eslint:recommended", "plugin:react/recommended"],
  "ecmaFeatures": {
    "classes": true
  },
  "rules": {
    "react/jsx-filename-extension": [
      "error",
      { "extensions": [".js", ".jsx"] }
    ],
    "react/sort-comp": ["off"],
    "react/jsx-one-expression-per-line": ["off"],
    "react/prefer-stateless-function": ["off"],
    "react/destructuring-assignment": "off",
    "global-require": "off"
  }
}
